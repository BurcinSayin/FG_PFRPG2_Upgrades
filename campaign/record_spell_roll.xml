<?xml version="1.0" encoding="iso-8859-1"?>

<root>

    <string name="melee_skill">Melee Skill</string>
    <string name="ranged_skill">Ranged Skill</string>


    <windowclass name="power_cast_editor_main">
        <sheetdata>
            <anchor_column name="columnanchor" />

            <label_column name="name_label">
                <static textres="power_label_name" />
            </label_column>
            <simplestringc name="name">
                <anchored>
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                    <right offset="-5" />
                </anchored>
                <multilinespacing>20</multilinespacing>
                <readonly />
            </simplestringc>

            <label_column name="targeting_label">
                <static textres="power_label_targeting" />
            </label_column>
            <button_stringcycler name="targeting">
                <anchored width="60" height="20">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="97" />
                </anchored>
                <parameters>
                    <defaultlabelres>power_label_targetnormal</defaultlabelres>
                    <labelsres>power_label_targetself</labelsres>
                    <values>self</values>
                </parameters>
            </button_stringcycler>

            <header_column name="header_attack">
                <static textres="power_header_cast_attack" />
                <center />
            </header_column>
            <button_stringcycler name="atktype">
                <anchored width="70" height="20">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="20" />
                    <left offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres>power_label_atktypenone</defaultlabelres>
                    <labelsres>power_label_atktypemelee|power_label_atktyperanged|power_label_atktypemeleespell|power_label_atktyperangedspell|melee_skill|ranged_skill</labelsres>
                    <values>melee|ranged|meleespell|rangedspell|meleeskill|rangedskill</values>
                </parameters>
            </button_stringcycler>
            <label_fieldtop>
                <anchored to="atktype" />
                <static textres="power_label_atktype" />
            </label_fieldtop>

            <cycler_ability name="attackstat">
                <anchored to="atktype" position="righthigh" offset="15,0" width="40" height="20"/>
            </cycler_ability>
            <label_fieldtop>
                <anchored to="attackstat" />
                <static textres="weapon_label_atkstat" />
            </label_fieldtop>
            <label name="atkplus">
                <anchored to="attackstat" position="righthigh" offset="5,0" width="10" />
                <static>+</static>
                <center />
            </label>
            <basicnumber name="atkmod">
                <anchored to="atkplus" position="righthigh" offset="5,0" width="25" height="20" />
                <hideonvalue value="0" />
            </basicnumber>
            <label_fieldtop>
                <anchored to="atkmod" />
                <static textres="char_label_combatmisc" />
            </label_fieldtop>
            <header_column name="header_save">
                <static textres="power_header_cast_save" />
                <center />
            </header_column>
            <button_stringcycler name="savetype">
                <anchored width="50">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
                    <left offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres>power_label_savetypenone</defaultlabelres>
                    <labelsres>power_label_savetypefort|power_label_savetyperef|power_label_savetypewill</labelsres>
                    <values>fortitude|reflex|will</values>
                </parameters>
            </button_stringcycler>
            <label name="savedclabel">
                <anchored to="savetype" position="righthigh" offset="10,0" width="15" />
                <static textres="dc" />
            </label>
            <button_stringcycler name="savedctype">
                <anchored to="savedclabel" position="righthigh" offset="10,0" width="70" height="20" />
                <parameters>
                    <defaultlabelres>power_label_savedctype_ability</defaultlabelres>
                    <labelsres>power_label_savedctype_casterlevel|power_label_savedctype_fixed</labelsres>
                    <values>casterlevel|fixed</values>
                </parameters>
                <script>
                    function onInit()
                    if super and super.onInit then
                    super.onInit();
                    end
                    onValueChanged();
                    end

                    function onValueChanged()
                    local sDCType = getValue();
                    GlobalDebug.consoleObjects("effectdctype - onValueChanged.  sDCType = ", sDCType);
                    if sDCType == Interface.getString("power_label_savedctype_fixed") then
                    window.savedcplusequals.setValue("=");
                    else
                    window.savedcplusequals.setValue("+");
                    end
                    end
                </script>
            </button_stringcycler>
            <label name="savedcplusequals">
                <anchored to="savedctype" position="righthigh" offset="5,0" width="10" />
                <static>+</static>
                <center />
            </label>
            <basicnumber name="savedcmod">
                <anchored to="savedcplusequals" position="righthigh" offset="5,0" width="30" height="20" />
                <hideonvalue value="0" />
            </basicnumber>


            <label name="label_extratraits">
                <anchored to="savetype" position="belowleft" offset="0,5" />
                <static textres="spell_label_cast_extratraits" />
            </label>
            <stringu name="extratraits">
                <anchored to="label_extratraits" position="righthigh" offset="10,0">
                    <right parent="" offset="-5" />
                </anchored>
                <multilinespacing>20</multilinespacing>
            </stringu>

            <spacer_column name="spacer">
                <anchored height="20" />
            </spacer_column>

            <header_column name="header_onmiss">
                <static textres="power_header_cast_onmiss" />
                <center />
            </header_column>
            <button_stringcycler name="onmissdamage">
                <anchored width="100" height="20">
                    <top parent="columnanchor" anchor="bottom" relation="relative" offset="20" />
                    <left offset="5" />
                </anchored>
                <parameters>
                    <defaultlabelres>dash</defaultlabelres>
                    <labelsres>power_label_onmissdamage_half</labelsres>
                    <values>half</values>
                </parameters>
            </button_stringcycler>
            <label_fieldtop>
                <anchored to="onmissdamage" />
                <static textres="power_label_onmissdamage" />
            </label_fieldtop>
        </sheetdata>
    </windowclass>
</root>


